<ul>
  <% lines.sort { |a,b| a.short_name.to_i <=> b.short_name.to_i }.each do |line| %>
    <% if line.picto_url.blank? %>
      <li class="as_text" style="background-color: #<%= line.bgcolor %>">
       <%= link_to( ( line.short_name + ' ' + content_tag('span', line.long_name)).html_safe,
                    home_line_path(@agency,line), { 'data-short' => line.short_name, :style=> "color: ##{line.fgcolor}" } )%>
     <% else %>
      <li>
        <%= link_to image_tag( line.picto_url ) + content_tag('span', line.full_name), home_line_path(@agency,line), { 'data-short' => line.short_name } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= div_clear %>
